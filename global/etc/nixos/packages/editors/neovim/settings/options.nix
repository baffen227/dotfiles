''
  syntax enable

  set number
  set hlsearch
  set tabstop=4
  set shiftwidth=4
  set expandtab

  filetype on
  filetype plugin on
  filetype indent on

  " Better search
  set incsearch
  set ignorecase
  set smartcase

  " Better indentation
  set smartindent
  set autoindent

  " Better UI
  set showcmd
  set showmatch
  set ruler
  set cursorline

  " Better navigation
  set scrolloff=8
  set sidescrolloff=8

  " Better clipboard
  set clipboard=unnamedplus

  " Better splits
  set splitbelow
  set splitright
''